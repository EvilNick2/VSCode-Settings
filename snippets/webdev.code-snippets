			"\t\t<?php if (isset($$_SESSION['rank']) && $$rankHierarchy[$$_SESSION['rank']] >= $$rankHierarchy['Employee']): ?>",
			"\t\t\t<a class=\"link-1-color <?php echo (isset($$currentPage) && $$currentPage === 'dashboard') ? 'active' : ''; ?>\" href=\"<?php echo $$prefix; ?>html/dashboard.php\">Dashboard</a>",
